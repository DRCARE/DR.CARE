<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <shape xmlns:android="http://schemas.android.com/apk/res/android" android:shape="rectangle">
            <corners android:radius="@dimen/base_4" />
            <gradient android:angle="270" android:endColor="@color/colorPrimaryOpacity" android:startColor="@color/colorPrimaryOpacity" />
            <size android:width="@dimen/base_160" android:height="@dimen/base_32" />
        </shape>
    </item>
    <item android:state_focused="true">
        <shape xmlns:android="http://schemas.android.com/apk/res/android" android:shape="rectangle">
            <corners android:radius="@dimen/base_4" />
            <gradient android:angle="270" android:endColor="@color/colorPrimaryOpacity" android:startColor="@color/colorPrimaryOpacity" />
            <size android:width="@dimen/base_160" android:height="@dimen/base_32" />
        </shape>
    </item>
    <item>
        <shape xmlns:android="http://schemas.android.com/apk/res/android" android:shape="rectangle">
            <corners android:radius="@dimen/base_4" />
            <gradient android:angle="270" android:endColor="@color/colorPrimary" android:startColor="@color/colorPrimary" />
            <size android:width="@dimen/base_160" android:height="@dimen/base_32" />
        </shape>
    </item>
</selector>